<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:textColor="#ff3d00"
        android:text="@string/tic_tac_toe"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/txtPlayer1"
        android:textColor="#1a237e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Player1: 0"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/txtPlayer2"
        android:textColor="#1a237e"
        android:text="Player2: 0"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/btn_00"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0"
            android:background="@drawable/custom_box_shape"
            android:layout_height="match_parent"/>
        <Button
            android:padding="5dp"
            android:tag="1"
            android:id="@+id/btn_01"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:padding="5dp"
            android:tag="2"
            android:id="@+id/btn_02"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <Button
            android:padding="5dp"
            android:tag="3"
            android:id="@+id/btn_10"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:padding="5dp"
            android:tag="4"
            android:id="@+id/btn_11"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:padding="5dp"
            android:tag="5"
            android:id="@+id/btn_12"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp">
        <Button
            android:padding="5dp"
            android:tag="6"
            android:id="@+id/btn_20"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:padding="5dp"
            android:tag="7"
            android:id="@+id/btn_21"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:padding="5dp"
            android:tag="8"
            android:id="@+id/btn_22"
            android:textColor="#ffff8d"
            android:textSize="55sp"
            android:background="@drawable/custom_box_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
       android:layout_marginBottom="40dp"
        android:textColor="#ff3d00"
        android:text="X's Turn "
        android:textSize="18sp" />


</LinearLayout>